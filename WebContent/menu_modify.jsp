<%@page import="java.util.Map"%><%@page import="java.util.List"%><%@page import="com.right.dao.MenuDAO"%><%@ page language="java" contentType="text/html; charset=UTF-8"	pageEncoding="UTF-8"%><%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %><html><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8"><link href="bootstrap/css/bootstrap.min.css" rel="stylesheet"><script src="jquery/jquery-1.9.1.min.js"></script><script src="bootstrap/js/bootstrap.min.js"></script><title>权限管理</title></head><body><script type="text/javascript">	function submit(){		$("#menuForm").submit();	}</script><div>		<div class="modal-header">			<button type="button" class="close" data-dismiss="modal"				aria-label="Close">				<span aria-hidden="true">&times;</span>			</button>			<h4 class="modal-title">修改菜单</h4>		</div>		<div class="modal-body">			<form role="form" id="menuForm" action="menu!save.action" method="post">				<div class="form-group">					<label for="name">父菜单</label> 					<!-- 查看parentMenuList						  这里获取不到parentID，变成增加而不是删除了						要将parentID设置为默认，但是option中的默认值好像不可以嵌入jstl						点击可以修改，						并且可以要把这个值提交到MenuAction中的save方法中						-->																<select name="parent_id" class="form-control" >									<c:forEach items="${parentMenuList}" var="m">								<c:if test="${not empty menu }"> 									<c:if test="${not empty menu.parent_id }">									 	<c:if test="${menu.parent_id == m.id }">									 		<option value="${ m.id }">												${m.name}											</option>										 	</c:if>										 </c:if>									</c:if>							</c:forEach>																													<c:forEach items="${parentMenuList}" var="m">									<c:if test="${not empty menu }"> 								<c:if test="${not empty menu.parent_id }">								 	<c:if test="${menu.parent_id != m.id }">								 		<option value="${ m.id }">											${m.name}										</option>																					 	</c:if>									 </c:if>								</c:if>																</c:forEach>					</select>								<!-- 查看parentMenuList end-->				</div>				<input type="hidden" name="id" value="${menu.id}"/>				<div class="form-group">					<label for="name">名称</label> <input type="text" value="${menu.name}"						class="form-control" id="name" name="name" placeholder="请输入名称">				</div>				<div class="form-group">					<label for="ico">ico</label> <input type="text" value="${menu.ico }"						id="ico" name="ico" class="form-control" placeholder="请输入ICO"/>				</div>				<div class="form-group">					<label for="url">url</label> <input type="text" value="${menu.url }"						id="url" name="url" class="form-control" placeholder="请输入URL"/>				</div>			</form>		</div>		<div class="modal-footer">			<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>			<button type="button" class="btn btn-primary" onclick="submit()">确定</button>		</div>	</div></body></html>